.find{
  width:100%;
}
.find .recom .mall{
  color:rgb(255, 153, 0);
  font-size:34rpx;
  padding: 20rpx 0 0 20rpx;
}

.find .recom{
  width:100%;
  height:450rpx;
}

.find .recom .free{
  color:#999;
  font-size:30rpx;
  padding:10rpx 0 0 20rpx;
}
.find .recom .top{
  height:300rpx;
  position:relative;
}

.find .recom image{
  width:150rpx;
  height:150rpx;
}

.find .recom .img{
  width:150rpx;
  height:150rpx;
  position:absolute;
  right: 10px;
  top:140rpx;
}
.find .recom .bottom{
  border-top: 1px solid #ededed;
  border-bottom: 1px solid #ededed;
  overflow:hidden;
  height:150rpx;
}
.find .recom .bottom .left{
  float:left;
}
.find .recom .bottom .right{
  float:right;
}
.find .recom .bottom .right image{
  width:100rpx;
  height:100rpx;
  margin-top:30rpx;
  margin-right:10rpx;
}
.find .recom .goldmall{
  float:left;
  width:49%;
  border-right:1px solid #ededed;
}
.find .recom .redbag{
  float:left;
  width:50%;
  height:100%;
}
.find .recom .redbag .bottom{
  border-top:none;
  margin-top: 0;
  height:150rpx;
}
.find .food{
  width: 100%;
  height:200rpx;
}
.find .food image{
  width: 100%;
  height: 100%;
}
.find .list .foryou{
  width: 100%;
  text-align: center;
  margin-top: 20rpx;
  font-size: 40rpx;
}
.find .list .aboutyou{
  width: 100%;
  font-size:20rpx;
  color:#999;
  margin-top:10rpx;
  text-align:center;
}
.find .list{
  width:90%;
  margin: 0 auto;
}
.find .list .cate{
  width:300rpx;
  height:300rpx;
}
.find .list .name{
  font-size:32rpx;

}
.find .list .survey{
  color:#999;
  font-size:20rpx;
}
.find .list .survey .count{
  margin-right:10rpx;
}
.find .list .prise{
  font-size:40rpx;
  color:#ff6000;
}
.find .list .listbox{
  display:flex;
  justify-content:space-between;
  margin-top:40rpx;
}














