.box{
  background:#f5f5f5;
}
.person{
  background:#0085ff;
  overflow:hidden;
  padding:50rpx 0;
}
.person .photo{
  width:150rpx;
  height:150rpx;
  border:1rpx solid #fff;
  border-radius:50%;
  overflow:hidden;
  float:left;
  margin: 0 40rpx;

}
.person .photo image{
  width:150rpx;
  height:150rpx;
}
.person .name{
  color:#fff;
  font-size:40rpx;
  float:left;
}
.person .name view{
  margin-bottom:10rpx;
}
.person .name view image{
  width:40rpx;
  height:40rpx;
}
.person .name view text{
  font-size:28rpx;
}
.property{
  display:flex;
  justify-content: space-around;
  background:#fff;
  text-align:center;
}
.property .redbag{
  border-right:1rpx solid #999;
  width:50%;
  padding: 40rpx 0;
}
.property .gold{
  width:50%;
  padding: 40rpx 0;
}
.property .top .two{
  font-size:60rpx;
  font-weight:bold;
}
.property .top text{
  color:rgb(255, 95, 62);
  font-size:20rpx;
}
.address{
  background:#fff;
  margin-top:40rpx;
  height:40rpx;
  padding:30rpx 0;
}
.address image{
  width:40rpx;
  height:40rpx;
  margin:0 40rpx;
}
.box .service{
  margin-top: 0;
}
.address text{
  font-size:34rpx;
}









